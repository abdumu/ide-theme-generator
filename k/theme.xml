<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="<%id%>" _name="<%name%>" version="1.0">
	<author><%author%></author>
	<_description><%desc%></_description>

<!-- Scribe Theme Generator 1.3 -->

<!-- COLORS -->
	<color name="comment_color" value="<%comment_color%>"/>
	<color name="number_color" value="<%number_color%>"/>
	<color name="string_color" value="<%string_color%>"/>
	<color name="boolean_color" value="<%boolean_color%>"/>
	<color name="keyword_color" value="<%keyword_color%>"/>
	<color name="error_color" value="<%error_color%>"/>
	<color name="text_fg" value="<%text_fg%>"/>
	<color name="text_bg" value="<%text_bg%>"/>
	<color name="line_highlight" value="<%line_highlight%>"/>

<!-- Global Settings -->
	<style name="text" foreground="text_fg" background="text_bg"<%text_fg_options%>/>
	<style name="cursor" foreground="error_color"/>
	<style name="current-line" background="line_highlight"<%line_highlight_options%>/>
	<style name="line-numbers" foreground="text_bg" background="keyword_color"/>
	<style name="selection" foreground="text_fg" background="keyword_color"<%text_fg_options%>/>

<!-- Bracket Matching -->
	<style name="bracket-match" foreground="text_bg" background="keyword_color"<%keyword_color_options%>/>
	<style name="bracket-mismatch" background="error_color"<%error_color_options%>/>
	<style name="search-match" foreground="comment_color" background="text_fg"<%comment_color_options%>/>

<!-- Base syntax colors

Languages: plain, python, ruby, xml, html, ada, asp, awk, boo, c,
changelog, chdr, cmake, cpp, csharp, css, d, def, desktop, diff,
docbook, dosbatch, dot, dpatch, dtd, eiffel, erlang, forth, fortran,
gap, gtkrc, haddock, haskell, haskell-literate, idl, ini, java,
javascript, latex, libtool, lua, m4, makefile, msil, nermele, nsis,
objc, ocaml, ocl, octave, pascal, perl, php, pkgconfig, po, prolog,
R, rpmspec, scheme, sh, sql, t2t, tcl, texinfo, vala, vbnet, verilog,
vhdl, xslt, yacc

-->

	<style name="def:string" foreground="string_color"<%string_color_options%>/>
	<style name="def:character" foreground="string_color"<%string_color_options%>/>
	<style name="def:special-char" foreground="string_color"<%string_color_options%>/>
	<style name="def:number" foreground="number_color"<%number_color_options%>/>
	<style name="def:decimal" foreground="number_color"<%number_color_options%>/>
	<style name="def:floating-point" foreground="number_color"<%number_color_options%>/>
	<style name="def:complex" foreground="number_color"<%number_color_options%>/>
	<style name="def:base-n-integer" foreground="number_color"<%number_color_options%>/>
	<style name="def:boolean" foreground="boolean_color"<%boolean_color_options%>/>

	<style name="def:builtin" foreground="keyword_color"<%keyword_color_options%>/>
	<style name="def:keyword" foreground="keyword_color"<%keyword_color_options%>/>
	<style name="def:function" foreground="keyword_color"<%keyword_color_options%>/>
	<style name="def:type" foreground="keyword_color"<%keyword_color_options%>/>
	<style name="def:preprocessor" foreground="keyword_color"<%keyword_color_options%>/>
	<style name="def:identifier" foreground="keyword_color"<%keyword_color_options%>/>
	<style name="def:operator" foreground="keyword_color"<%keyword_color_options%>/>
	<style name="def:statement" foreground="keyword_color"<%keyword_color_options%>/>

	<style name="def:constant" foreground="keyword_color"<%keyword_color_options%>/>
	<style name="def:special-constant" foreground="keyword_color"<%keyword_color_options%>/>
	<style name="def:error" foreground="text_bg" background="error_color"<%error_color_options%>/>

<!-- Comments -->

	<style name="def:comment" foreground="comment_color"<%comment_color_options%>/>
	<style name="def:shebang" foreground="comment_color"<%comment_color_options%>/>
	<style name="def:doc-comment-element" foreground="comment_color"<%comment_color_options%>/>
	<style name="def:note" foreground="comment_color"<%comment_color_options%>/>

</style-scheme>
